{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript"],
  "categories": {
    "correctness": "error",
    "suspicious": "error"
  },
  "rules": {
    "no-unused-vars": "off",
    "typescript/no-unused-vars": "off",
    "no-async-promise-executor": "warn"
  },
  "ignorePatterns": ["node_modules", "dist"]
}
