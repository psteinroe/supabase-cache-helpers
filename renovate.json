{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "pin",
        "digest"
      ],
      "groupName": "all minor updates",
      "groupSlug": "all-minor",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "enabled": false,
      "matchPackageNames": [
        "/pnpm/",
        "/merge-anything/",
        "/node/"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "enabled": false
    }
  ]
}
